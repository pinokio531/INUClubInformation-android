<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/modify"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="82dp"
        android:singleLine="true"
        android:text="동아리수정"
        android:textSize="30dp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:paddingLeft="1dp"
        android:paddingRight="15dp"
        android:layout_alignStart="@+id/modify"
        android:layout_below="@+id/modify"
        android:layout_marginTop="67.7dp"
        android:text="사진을 업로드 해주세요"
        android:textSize="13dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="239dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/linearLayout">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="66dp"
            android:layout_height="67dp"
            android:layout_gravity=""
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/photoplus" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="66dp"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:layout_marginStart="9.7dp"

            app:srcCompat="@drawable/photoplus" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="66dp"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:layout_marginStart="9.7dp"
            app:srcCompat="@drawable/photoplus" />

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:layout_marginStart="9.7dp"
            app:srcCompat="@drawable/photoplus" />


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="64dp"

        android:text="다음"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#00fabfbf"/>


</RelativeLayout>
