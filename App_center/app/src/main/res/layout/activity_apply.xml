<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/perfect"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/clubImages"
        android:layout_width="match_parent"
        android:layout_height="300dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">

        <TextView
            android:id="@+id/clubName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="29dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="퍼펙트 Perfect!"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:paddingLeft="1dp"
                android:id="@+id/representName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:text="김성민"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/representNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:text="김성민"
                android:maxLines="1" />


        </LinearLayout>

        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:text="학생회관 303호"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="#eaeaea"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="22dp"
        android:paddingBottom="20dp"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/introduceClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 나는야 김성민. 개발자지."
                android:textSize="13dp"
                android:gravity="left"
                android:lineSpacingExtra="4dp"/>
        </ScrollView>

    </LinearLayout>
</LinearLayout>